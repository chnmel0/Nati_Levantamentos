<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nati.natilevantamento.Inicial">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_dep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departamento:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="34dp" />

            <EditText
                android:id="@+id/etx_dep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Departamento"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="16dp" />
            <TextView
                android:id="@+id/txt_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Laboratório:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="34dp" />

            <EditText
                android:id="@+id/etx_lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Laboratorio"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="16dp" />0
            <TextView
                android:id="@+id/txt_resp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responsável pelo Laboratório:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="34dp" />

            <EditText
                android:id="@+id/etx_resp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Responsável"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="16dp" />
            <TextView
                android:id="@+id/txt_rvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responsável pela Visita:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="34dp" />

            <EditText
                android:id="@+id/etx_rvis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Responsável visita"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="16dp" />
            <TextView
                android:id="@+id/txt_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="34dp" />

            <EditText
                android:id="@+id/etx_dt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="__/__/__"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="16dp" />
            <TextView
                android:id="@+id/txt_qtdcomp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade de Computadores:"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="34dp" />

            <EditText
                android:id="@+id/etx_qtdcomp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Computadores"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="16dp" />
        <Button
            android:id="@+id/btn_criapdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            tools:layout_editor_absoluteX="293dp"
            tools:layout_editor_absoluteY="445dp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
